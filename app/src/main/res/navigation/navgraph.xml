<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/welcomeFragment"
    >

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.ezvault.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/welcomeFragment_to_newUserFragment"
            app:destination="@id/newUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.ezvault.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/loginFragment_to_itemsFragment"
            app:destination="@id/itemsFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/welcomeFragment"/>
        <action
            android:id="@+id/loginFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/newUserFragment"
        android:name="com.example.ezvault.NewUserFragment"
        android:label="NewUserFragment"
        tools:layout="@layout/fragment_new_user">
        <action
            android:id="@+id/newUserFragment_to_itemsFragment"
            app:destination="@id/itemsFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/newUserFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.example.ezvault.ItemsFragment"
        android:label="Items"
        tools:layout="@layout/fragment_items" >
        <action
            android:id="@+id/itemsFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />
        <argument
            android:name="item_name"
            app:argType="string" />
        <action
            android:id="@+id/action_itemsFragment_to_editItemDetails"
            app:destination="@id/editItemDetails" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.ezvault.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/tagsFragment"
        android:name="com.example.ezvault.TagsFragment"
        android:label="Tags"
        tools:layout="@layout/fragment_tags" >
        <action
            android:id="@+id/tagsFragment_to_tagDialogue"
            app:destination="@id/tagDialogue" />
        <argument
            android:name="tag_name"
            app:argType="string"
            android:defaultValue="guh"
            />
    </fragment>
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.example.ezvault.AddItemFragment"
        android:label="New Item"
        tools:layout="@layout/fragment_add_item" >
        <action
            android:id="@+id/action_addItemFragment_to_itemsFragment"
            app:destination="@id/itemsFragment" />
        <action
            android:id="@+id/action_addItemFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ezvault.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <dialog
        android:id="@+id/tagDialogue"
        android:name="com.example.ezvault.TagDialogue"
        android:label="TagDialogue"
        tools:layout="@layout/add_tag_dialogue"
        >
        <action
            android:id="@+id/tagDialogue_to_tagsFragment"
            app:destination="@id/tagsFragment" />
    </dialog>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.ezvault.CameraFragment"
        android:label="CameraFragment" >
        <action
            android:id="@+id/action_cameraFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/editItemDetails"
        android:name="com.example.ezvault.EditItemDetails"
        android:label="fragment_edit_item_details"
        tools:layout="@layout/fragment_edit_item_details" />
</navigation>